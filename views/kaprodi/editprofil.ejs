<% const editprofil = '' %>
<%- include('./template', { content: editprofil }) %>

    <!-- Profile Content -->
        <div class="container">
            <h1 class="heading">Profil Pengguna</h1>
            <div class="max-w-sm space-y-3">
                <form action="/kaprodi/editprofil?_method=PATCH" method ="POST">
                    <!-- <input type="hidden" name="_method" value="PATCH"> -->
                    
                    <div>
                            <div class="flex rounded-lg shadow-sm">
                            <span
                                class="px-4 inline-flex items-center min-w-fit rounded-s-md border border-e-0 border-gray-200 bg-gray-50 text-sm text-gray-500 dark:bg-neutral-700 dark:border-neutral-700 dark:text-neutral-400"
                                >Email</span
                            >
                            <input
                                type="text"
                                name="email"
                                class="py-2 px-3 pe-11 block w-full border-gray-200 shadow-sm rounded-e-lg text-sm focus:z-10 focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-900 dark:border-neutral-700 dark:text-neutral-400 dark:placeholder-neutral-500 dark:focus:ring-neutral-600"
                                value="<%= userEmail %>"
                            />
                            </div>
                            <div class="flex rounded-lg shadow-sm">
                            <span
                                class="px-4 inline-flex items-center min-w-fit rounded-s-md border border-e-0 border-gray-200 bg-gray-50 text-sm text-gray-500 dark:bg-neutral-700 dark:border-neutral-700 dark:text-neutral-400"
                                >Nama Depan</span
                            >
                            <input
                                type="text"
                                name="namadepan"
                                class="py-2 px-3 pe-11 block w-full border-gray-200 shadow-sm rounded-e-lg text-sm focus:z-10 focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-900 dark:border-neutral-700 dark:text-neutral-400 dark:placeholder-neutral-500 dark:focus:ring-neutral-600"
                                value="<%= userNamaDepan %>"
                            />
                            </div>
                            <div class="flex rounded-lg shadow-sm">
                              <span
                                  class="px-4 inline-flex items-center min-w-fit rounded-s-md border border-e-0 border-gray-200 bg-gray-50 text-sm text-gray-500 dark:bg-neutral-700 dark:border-neutral-700 dark:text-neutral-400"
                                  >Nama Belakang</span
                              >
                              <input
                                  type="text"
                                  name="namabelakang"
                                  class="py-2 px-3 pe-11 block w-full border-gray-200 shadow-sm rounded-e-lg text-sm focus:z-10 focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-900 dark:border-neutral-700 dark:text-neutral-400 dark:placeholder-neutral-500 dark:focus:ring-neutral-600"
                                  value="<%= userNamaBelakang %>"
                              />
                              </div>
                            <div class="flex rounded-lg shadow-sm">
                            <span
                                class="px-4 inline-flex items-center min-w-fit rounded-s-md border border-e-0 border-gray-200 bg-gray-50 text-sm text-gray-500 dark:bg-neutral-700 dark:border-neutral-700 dark:text-neutral-400"
                                >Nomor Identitas</span
                            >
                            <input
                                type="text"
                                name="no_identitas"
                                class="py-2 px-3 pe-11 block w-full border-gray-200 shadow-sm rounded-e-lg text-sm focus:z-10 focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-900 dark:border-neutral-700 dark:text-neutral-400 dark:placeholder-neutral-500 dark:focus:ring-neutral-600"
                                value="<%= userNo_Identitas%>"
                            />
                            </div>
                            <div class="flex rounded-lg shadow-sm">
                                <span
                                    class="px-4 inline-flex items-center min-w-fit rounded-s-md border border-e-0 border-gray-200 bg-gray-50 text-sm text-gray-500 dark:bg-neutral-700 dark:border-neutral-700 dark:text-neutral-400"
                                    >No HP</span
                                >
                                <input type="text" 
                                name="no_hp"
                                class="py-2 px-3 pe-11 block w-full
                                border-gray-200 shadow-sm rounded-e-lg text-sm focus:z-10
                                focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50
                                disabled:pointer-events-none dark:bg-neutral-900
                                dark:border-neutral-700 dark:text-neutral-400
                                dark:placeholder-neutral-500 dark:focus:ring-neutral-600" value="
                                <%=userNo_Hp%>"
                            </div>
                            <div class="flex rounded-lg shadow-sm">
                                <span
                                    class="px-4 inline-flex items-center min-w-fit rounded-s-md border border-e-0 border-gray-200 bg-gray-50 text-sm text-gray-500 dark:bg-neutral-700 dark:border-neutral-700 dark:text-neutral-400"
                                    >Alamat</span
                                >
                                <input type="text" 
                                name="alamat"
                                class="py-2 px-3 pe-11 block w-full
                                border-gray-200 shadow-sm rounded-e-lg text-sm focus:z-10
                                focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50
                                disabled:pointer-events-none dark:bg-neutral-900
                                dark:border-neutral-700 dark:text-neutral-400
                                dark:placeholder-neutral-500 dark:focus:ring-neutral-600"
                                value="<%=userAlamat%>"
                            </div>
                    </div>
                    <button type="submit">Simpan</button>
                </div>
                </form>
            </div>
    <script src="./node_modules/preline/dist/preline.js"></script>
    <script>
      src = "preline.js";
    </script>
  </body>
</html>
