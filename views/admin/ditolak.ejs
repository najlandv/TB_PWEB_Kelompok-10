<% const ditolakContent = ' ' %>
<%- include('./template', { content: ditolakContent }) %>


<div class="container">
    <h1 class="custom-heading">Permintaan Formulir yang Ditolak</h1>
    <table>
    <thead>
        <tr>
            <th>No.</th>
            <th>Tanggal</th>
            <th>NIM</th>
            <th>Nama Mahasiswa</th>
            <th>Detail</th>
            <th>Status</th>
        </tr>
        <tbody>
            <% formulirDitolak.forEach((ditolak, index=0) => { %>
             <tr>
                <td><%= index+1 %></td>
                <td><%= ditolak.tanggalDikirim %></td>
                <td><%= ditolak.User.no_identitas %></td>
                <td><%= ditolak.User.nama_depan %> <%= ditolak.User.nama_belakang %></td>
                <td>
                    <a class="btn" href="detail/<%=ditolak.nomorSurat %>"><i class="fa-solid fa-circle-info fa-lg"></i>Detail</a>
                </td>
                <td style="font-style: italic; font-size: small; color:#4F6F52; text-decoration: underline;">Ditolak</td>

             </tr>
            <% }) %>
        </tbody>
    </thead>
    </table>
</div>