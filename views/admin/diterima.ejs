<% const diterimaContent = ' ' %>
<%- include('./template', { content: diterimaContent }) %>

<div class="container">
    <h1 class="custom-heading">Permintaan Formulir yang Diterima</h1>
    <table>
    <thead>
        <tr>
            <th>No.</th>
            <th>Tanggal</th>
            <th>NIM</th>
            <th>Nama Mahasiswa</th>
            <th>Detail</th>
            <th>Status</th>
        </tr>
        <tbody>
            <% formulirDiterima.forEach((diterima, index=0) => { %>
             <tr>
                <td><%= index+1 %></td>
                <td><%= diterima.tanggalDikirim %></td>
                <td><%= diterima.User.no_identitas %></td>
                <td><%= diterima.User.nama_depan %> <%= diterima.User.nama_belakang %></td>
                <td>
                    <a class="btn" href="detail/<%=diterima.nomorSurat %>"><i class="fa-solid fa-circle-info fa-lg"></i>Detail</a>
                </td>
                <td style="font-style: italic; font-size: small; color:#4F6F52; text-decoration: underline;">Diterima</td>
             </tr>
            <% }) %>
        </tbody>
    </thead>
    </table>
</div>